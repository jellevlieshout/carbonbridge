#!/bin/bash
# Rename this file to set_values_and_secrets and fill in the values

# OPENROUTER
pt secrets set openrouter-provisioning-api-key <your-openrouter-provisioning-api-key>

# AI (buyer wizard)
# Required for Gemini model calls used by the wizard agent
pt secrets set gemini-api <your-gemini-api-key>
# Optional: enable LangSmith tracing
pt secrets set langsmith-api-key <your-langsmith-api-key>

# WEB-APP
pt values set web-app-url http://localhost:8000
pt values set base-url http://localhost

# COUCHBASE
pt secrets set couchbase-username admin
pt secrets set couchbase-password password
pt values set couchbase-host couchbase

# POSTGRES
pt secrets set postgres-username admin
pt secrets set postgres-password password
pt secrets set postgres-connection-string postgres://admin:password@postgres:5432/idsvr?sslmode=disable

# CURITY
pt values set curity-base-url http://localhost:8443
pt secrets set curity-password password
pt secrets set curity-phantom-token-client-secret Password1

# KONG
pt secrets set kong-oauth-proxy-cookie-key Password1

# MAILGUN
pt secrets set mailgun-smtp-username mailgun-username
pt secrets set mailgun-smtp-password mailgun-password

