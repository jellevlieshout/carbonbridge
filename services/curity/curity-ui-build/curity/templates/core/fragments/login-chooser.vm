#parse("fragments/icon-mappings")
#define($_loginChooser)
    #if(!$_loginChooser_hide_selector_title)
    <h1 class="mt0 center">#message("views.select-authenticator.page.selector.title")</h1>
    #end
    #foreach($_authenticatorMapItem in $_allowedAuthenticators.values())
        <div class="form-field #if($icons_only_authenticator_chooser)form-field-social-icon#end mb1">
            <a href="$_authenticatorMapItem.url" id="$_authenticatorMapItem.authenticatorId"  class="button button-primary button-fullwidth button-social #if($icons_only_authenticator_chooser)button-social-icon#end button-$_authenticatorMapItem.type">
                <i class="icon #iconClassName($_authenticatorMapItem.type)"></i>
                #if(!$icons_only_authenticator_chooser)
                    #if($_authenticatorMapItem.description)
                        #message($_authenticatorMapItem.description)
                    #else
                        $_authenticatorMapItem.authenticatorId
                    #end
                #end
            </a>
        </div>
    #end
#end
