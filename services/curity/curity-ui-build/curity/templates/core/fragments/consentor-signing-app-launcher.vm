## Calling template needs to include handle-auto-start-uri to create getAutoStartUri(autoStartToken)
<script type="text/javascript" $!nonceAttr>
    // check what type of browser it is
    var isIos = /iphone|ipod|ipad/i.test(navigator.userAgent);
    var isIos9Plus = isIos && /.*OS [91].*/.test(navigator.userAgent);
    var isChromeIos = /crios/i.test(navigator.userAgent);
    var isAndroid = /android/i.test(navigator.userAgent);
    var launchCount = parseInt("$_launchCount");
    jQuery(document).ready(function () {
        var autostartUri = getAutoStartUri("${_autostartToken}");
        launchCount = isNaN(launchCount) ? 1 : launchCount;
        var isFirstLaunch = launchCount == 1;
        // set the auto start uri for the manual start button
        jQuery('#startBankIdApp').attr('href', autostartUri);
        //by default. non iOS 9+, the iframe will try to open the BankID app
        if (!isIos9Plus && isFirstLaunch) {
            //set the src for iframe
            jQuery('#autoStart').attr('src', autostartUri);
        }
        // on iOS 9+ cases, either start manually while on a frame, or autoclick the button to start BankID app
        if (isIos9Plus) {
            if (window.self !== window.top) {
                // We're framed. User will have to manually open the app. Universal links in frames require
                // user interaction. Prepare the start button to target _top when clicked.
                jQuery("#startBankIdApp").attr("target", "_top");
            }
            else if(isFirstLaunch){
                // Open the BankID app automatically only if we load the page first time,
                // otherwise it will open again, once coming back from signing
                jQuery('#startBankIdApp')[0].click();
            }
        }
        // Wait 5 seconds, if iframe did not start app, then display manual link and remove the progress message
        setTimeout(function () {
            jQuery(".manuallink").removeClass("display-none");
            jQuery("#startupAttemptMessage").addClass("display-none");
        }, 5000);
    });
</script>
