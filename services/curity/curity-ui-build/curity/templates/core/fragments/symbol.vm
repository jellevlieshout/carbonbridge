#if ($show_symbol)
<div class="login-symbol">
    #if ($page_symbol == $page_symbol_done)
		<div class="login-symbol-circle login-symbol-circle-done">
			<div class="check_mark">
				<div class="check-mark-icon sa-success animate">
					<span class="check-mark-icon-line check-mark-icon-tip successtip"></span>
					<span class="check-mark-icon-line check-mark-icon-long successlong"></span>
					<div class="check-mark-icon-placeholder"></div>
					<div class="check-mark-icon-fix"></div>
				</div>
			</div>
		</div>
    #else
		<div class="login-symbol-circle">
			<img src="$!page_symbol" alt="$!title" title="$!title" role="presentation" width="180" height="180">
		</div>
    #end
</div>
#end
