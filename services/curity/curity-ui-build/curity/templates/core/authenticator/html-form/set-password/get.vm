## The title of this page can be overridden by setting $title here to a resource string or the actual value
##set($title = "")
#set ($page_symbol = $page_symbol_authenticate_htmlform)
#define($_body)
    #if (!($_nonce_is_invalid))
        #parse("fragments/credential-operation-details")
        <form method="post" #if ($_postBackUrl) action="$_postBackUrl" #end>
            <h1 class="center">#message("authenticator.html-form.set-password.view.head1")</h1>
            <div class="form-password-reveal-form password-group">
                <label for="password">#message("authenticator.html-form.account-activation.view.newPassword")</label>
                <input class="block full-width mb1 field-light" type="password" name="password" id="password" autocomplete="new-password" autofocus/>
                <i class="form-password-reveal-form-icon"></i>
                #if ($_hasCredentialPolicy == true)
                    #parse("fragments/credential-validation")
                #else
                <div class="progress progress-thin">
                    <div class="progress-warning" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                #end
            </div>
            <button type="submit" class="button button-primary button-fullwidth">#message("${_templatePrefix}.view.button")</button>
            <div class="login-actions center py2">
                <a href="$_authUrl">#message("authenticator.html-form.set-password.view.cancel")</a>
            </div>
        </form>
    #else
        <form>
            <div class="alert alert-danger">#message(
                "authenticator.html-form.set-password.validation.error.token.invalid")</div>
        </form>
    #end
#end
#parse("layouts/default")
