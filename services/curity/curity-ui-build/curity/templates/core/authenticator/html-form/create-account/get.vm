#define($_body)
#parse("fragments/credential-operation-details")
<form method="post" class="login-form">
<div class="center">
    <h1 class="mt1">#message("${_templatePrefix}.view.create-account")</h1>
    <p>#message("authenticator.html-form.create-account.view.description")</p>
</div>
        <div class="form-field">
            <label for="name.givenName">#message(
                "authenticator.html-form.create-account.view.firstName")</label>
            <input type="text" name="name.givenName" id="name.givenName" autocorrect="off" spellcheck="false" value="$!{_postBack["name.givenName"]}"
                   class="block full-width mb1 field-light" autofocus required>
                    <i class="form-field-icon icon ion-ios-person"></i>
        </div>
        <div class="form-field">
            <label for="name.familyName">#message(
                "authenticator.html-form.create-account.view.lastName")</label>
            <input type="text" name="name.familyName" id="name.familyName" autocorrect="off" spellcheck="false" value="$!{_postBack["name.familyName"]}"
                   class="block full-width mb1 field-light" required>
                <i class="form-field-icon icon ion-ios-person"></i>
        </div>
    #if ($_showEmailField)
        <div class="form-field">
            <label for="primaryEmail">#message("authenticator.html-form.create-account.view.email")</label>
            <input type="email" name="primaryEmail" id="primaryEmail" value="$!{_postBack["primaryEmail"]}"
                   class="block full-width mb1 field-light" required>
                <i class="form-field-icon icon ion-email"></i>
        </div>
    #end
        <div class="form-field">
            <label for="primaryPhoneNumber">#message(
                "authenticator.html-form.create-account.view.phone")</label>
            <input type="text" name="primaryPhoneNumber" id="primaryPhoneNumber"
                value="$!{_postBack["primaryPhoneNumber"]}" class="block full-width mb1 field-light" required>
            <i class="form-field-icon icon ion-iphone"></i>
        </div>
    <div class="form-field">
        <label for="userName">#message("authenticator.html-form.create-account.view.username")</label>
        <input type="text" name="userName" id="userName" value="$!{_postBack["userName"]}"
           class="block full-width mb1 field-light" autocapitalize="none" required>
            <i class="form-field-icon icon ion-ios-person"></i>
    </div>
    #if ($_showPasswordFields == true)
        <div class="form-password-reveal-form password-group">
            <label for="password">#message("authenticator.html-form.create-account.view.password")</label>
            <input class="block full-width mb1 field-light" type="password" name="password" id="password" required>
            <i class="form-password-reveal-form-icon"></i>
            #if ($_hasCredentialPolicy == true)
                #parse("fragments/credential-validation")
            #else
                <div class="progress progress-thin">
                    <div class="progress-warning" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            #end
        </div>
        #*
        <label for="password2">#message("authenticator.html-form.create-account.view.repeatPassword")</label>
        <input type="password" name="password2" id="password2" class="block full-width mb1 field-light">
        *###
    #end
    <div class="mt3 mb2">
        <label>
            <input class="mr1" type="checkbox" name="agreeToTerms" id="agreeToTerms" required>
            <span>#message("authenticator.html-form.create-account.view.terms")</span>
        </label>
    </div>
    <button type="submit" class="button button-fullwidth button-primary">
        #message("authenticator.html-form.create-account.view.button")
    </button>
</form>
#end
#parse("layouts/default")
