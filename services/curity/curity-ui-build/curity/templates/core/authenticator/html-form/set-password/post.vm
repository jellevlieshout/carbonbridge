## The title of this page can be overridden by setting the $title variable here to a resource string or the actual value
##set($title = "")
#set ($page_symbol = $page_symbol_done)
## Define the body block, which is the main content of the view
#define($_body)
    <div class="area center">
        <h1>#message("authenticator.html-form.set-password.view.success.head1")</h1>
        #if ($_showLoginActions)
            #parse("fragments/auto-login")
            <div class="login-actions center py2">
                <a href="$_authUrl">
                    <i class="icon ion-android-arrow-back inlineicon"></i>#message("authenticator.html-form.set-password.view.back.to.login")
                </a>
            </div>
        #else
            <p data-qa-message="done">#message("authenticator.html-form.set-password.view.success.done")</p>
        #end
    </div>
#end
#parse("layouts/default")
