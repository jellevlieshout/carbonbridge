#set ($page_symbol = $page_symbol_authenticate_pair_device)
#define($_body)
<form method="post" class="login-form">
    <div class="center">
        <h1>#message("authenticator.duo.register.view.activate.device")</h1>
    </div>
    <label for="device.alias">#message(
        "authenticator.duo.register.device.alias")</label>
    <input type="text" name="alias" id="alias"
            class="block full-width mb1 field-light" autofocus>
    <div class="form-field">
        <label for="device.phoneNumber">#message(
                "authenticator.duo.register.device.phoneNumber")</label>
        <input type="text" name="phoneNumber" id="phoneNumber"
               class="block full-width mb1 field-light" autofocus>
        <i class="form-field-icon icon ion-iphone"></i>
    </div>
    <button type="submit" class="button button-fullwidth button-primary">
        #message("authenticator.duo.register.view.activate")
    </button>
</form>
#end
#parse("layouts/default")
