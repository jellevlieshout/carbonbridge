#set ($page_symbol = $page_symbol_authenticate_email)
#define($_body)
<form action="$_action" method="post" autocomplete="off">
    #if(!$!_hideForm)
        #if($_recipientOfCommunication)
            <div class="center">
                <h1 id="recipient" class="recipient recipient-email">
                    #message("authenticator.email.enter-otp.view.recipient-address")
                    <span>
                        $RegexUtil.replaceGroups($_recipientOfCommunication,
                            "(.*?)([^@]{1,4})(@)(.*?)([^.]{1,4})(\\.)?(.*)?", [2, 5], "x")
                    </span>
                </h1>
            </div>
        #end
        <div class="form-field">
            <label for="otp" class="$!_errorClass">#message("authenticator.email.enter-otp.view.enter-otp")</label>
            <input type="text" name="otp" id="otp" class="block full-width mb1 field-light" required autofocus>
            <button type="submit" class="button button-fullwidth button-primary">#message("authenticator.email.enter-otp.view.verify")</button>
            <i class="form-field-icon icon ion-grid"></i>
        </div>
    #end
    <div class="center py2 login-actions">
        <a href="$_authUrl" role="button">
            <i class="icon ion-refresh inlineicon"></i>#message("authenticator.email.enter-otp.view.restart")</a>
    </div>
</form>
#end
#parse("layouts/default")
