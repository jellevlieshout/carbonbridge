#if($_postBack && $_postBack["userName"])
    #set($userNameValue = $_postBack["userName"])
#elseif($_username)
    #set($userNameValue = $_username)
#end
#set ($nextPage = $_registerUrl)
#if ($_showInfoBeforeRegistration)
    #set ($nextPage = $_anonymousUrl)
#end
#set ($page_symbol = $page_symbol_authenticate_sms)
#define($_body)
    #if ($_singleFactor)
        <form method="post">
            #if ($_errors)
                #set($_errorClass = "is-error is-error-danger")
            #end
            <h1 class="center">#message("authenticator.sms.enter-username.view.username")</h1>
            <div class="form-field">
              <label class="$!_errorClass">#message("authenticator.sms.enter-username.label.username")</label>
                <input type="text" name="userName" id="userName" class="block full-width mb1 field-light $!_errorClass" autofocus
                   required value="$!userNameValue" autocapitalize="none">
                <i class="form-field-icon icon ion-person"></i>
            </div>
            <button type="submit" class="button button-fullwidth button-primary">#message(
                "${_templatePrefix}.view.challenge")</button>
        </form>
    #end
        #if ($_allowRegistrationDuringLogin)
            <div class="center py2 login-actions">
            <p>
                    #message("authenticator.sms.enter-username.view.register-info")
                    #if (!$_showInfoBeforeRegistration)
                        ## The next thing the user will see is a login prompt (unless they've logged in before with
                        ## an allowed authenticator), so we'll give them a bit of extra info before they're
                        ## redirected.
                        #message("authenticator.sms.enter-username.view.register-info-login")
                    #end
            </p>
            <a href="$nextPage">
                #message("authenticator.sms.enter-username.view.register-or-change")
            </a>
            </div>
        #end
#end
#parse("layouts/default")
