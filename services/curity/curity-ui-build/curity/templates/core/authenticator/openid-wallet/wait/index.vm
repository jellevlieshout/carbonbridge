#set ($page_symbol = $page_symbol_openid_wallet)
#define($_body)
    <form method="post" class="poller-onsuccess">
        <input type="hidden"  id="moveOn" name="moveOn" value="true"/>
        <h1 class="center">#message("${_templatePrefix}.page.title")</h1>
        <p class="center">#message("${_templatePrefix}.view.instructions")</p>
        <div class="center p2">
            #parse("fragments/spinner")
        </div>
    </form>
    <div class="center py2 login-actions">
        <a href="$_restartUrl">
            <i class="icon ion-refresh inlineicon"></i>#message("${_templatePrefix}.view.button.retry")
        </a>
    </div>
    #set($_maxWaitTime = 300) ## 5mins to give the user enough time to work with a wallet
    #parse("fragments/poller")
