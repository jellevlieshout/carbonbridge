<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>SAML POST</title>
    </head>
    <body onload="document.forms[0].submit()" > <!---->
        <form action="$_destination" method="post">
            <input type="hidden" name="SAMLResponse" value="$_encodedResponse"/>
            #if($_relayState)
                <input type="hidden" name="RelayState" value="$_relayState"/>
            #end
            <noscript>
                <input type="submit" value="Submit"/>
            </noscript>
        </form>
    </body>
</html>
